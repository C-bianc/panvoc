<ul class="nav nav-pills py-3 flex-column">
    <li class="nav-item p1 px-lg-3 text-center">
        <a class="nav-link btn chooseLvlLink mb-5 text-warning"
           href="/play/launch-game?level=ownList">Own list
        </a>
    </li>
    <!-- display choose levels buttons and change color according to level -->
    <span class="fs-5 fw-semibold text-center">CEFR</span>
    <span class="fs-5 fw-semibold mb-3 text-center">level</span>
    <% for (var i = 0; i < gameButtons.length; i++) {
        var level = gameButtons[i]
        var colorClass = ''

        if (level === 'A1' || level === 'A2') {
            colorClass = 'color-green'
        } else if (level === 'B1' || level === 'B2') {
            colorClass = 'color-blue'
        } else if (level === 'C1' || level === 'C2') {
            colorClass = 'color-purple'
        }
    %>
    <li class="nav-item p-1 px-lg-3 text-center">
        <a class="nav-link chooseLvlLink <%= colorClass %>"
           href="/play/launch-game?level=<%= level %>"><%= level %>
        </a>
    </li>
    <% } %>
</ul>